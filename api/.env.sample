# Base Framework Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application metadata
APP_VERSION=1.0.0
ENV=debug
# Options: debug, development, production

# =============================================================================
# SERVER CONFIGURATION  
# =============================================================================

# Server connection settings
SERVER_ADDRESS=localhost
SERVER_PORT=8100
APPHOST=http://localhost:8100

# CORS configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# MIDDLEWARE CONFIGURATION
# =============================================================================

# Global middleware settings (Convention over Configuration)
MIDDLEWARE_API_KEY_ENABLED=true
MIDDLEWARE_API_KEY_SKIP_PATHS=/health,/,/docs,/docs/swagger.json
MIDDLEWARE_AUTH_ENABLED=false
MIDDLEWARE_AUTH_SKIP_PATHS=/api/auth/login,/api/auth/register,/api/auth/forgot-password
MIDDLEWARE_RATE_LIMIT_ENABLED=true
MIDDLEWARE_RATE_LIMIT_REQUESTS=60
MIDDLEWARE_RATE_LIMIT_WINDOW=1m
MIDDLEWARE_RATE_LIMIT_SKIP_PATHS=/health,/
MIDDLEWARE_LOGGING_ENABLED=true
MIDDLEWARE_LOGGING_SKIP_PATHS=
MIDDLEWARE_RECOVERY_ENABLED=true
MIDDLEWARE_CORS_ENABLED=true

# Webhook-specific middleware (for third-party integrations)
MIDDLEWARE_WEBHOOK_PATHS=/api/webhooks/*,/webhooks/*
MIDDLEWARE_WEBHOOK_API_KEY_ENABLED=false
MIDDLEWARE_WEBHOOK_AUTH_ENABLED=false
MIDDLEWARE_WEBHOOK_SIGNATURE_ENABLED=true
MIDDLEWARE_WEBHOOK_RATE_LIMIT_REQUESTS=1000
MIDDLEWARE_WEBHOOK_RATE_LIMIT_WINDOW=1h

# Per-endpoint middleware overrides (JSON format)
# Format: {"path": {"middleware": "enabled|disabled"}}
MIDDLEWARE_OVERRIDES={"api/public/*": {"api_key": "disabled", "auth": "disabled"}}

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Enable/disable Swagger documentation (set to false in production)
SWAGGER_ENABLED=true

# Enable/disable WebSocket functionality
WS_ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for token signing (CHANGE IN PRODUCTION!)
JWT_SECRET=change_me_in_production_super_secret_key

# API key for protected endpoints (CHANGE IN PRODUCTION!)
API_KEY=change_me_in_production_api_key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database driver and connection
DB_DRIVER=sqlite
# Options: sqlite, mysql, postgres

# For SQLite (default for development)
DB_PATH=storage/base.db

# For MySQL/PostgreSQL (uncomment and configure as needed)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your_password
# DB_NAME=base_app

# Alternative: Use full database URL
# DB_URL=mysql://user:password@localhost:3306/database
# DB_URL=postgres://user:password@localhost:5432/database

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email provider and settings
EMAIL_PROVIDER=smtp
# Options: smtp, sendgrid, postmark

EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# SMTP Configuration (for EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# SendGrid Configuration (for EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your_sendgrid_api_key

# Postmark Configuration (for EMAIL_PROVIDER=postmark)
# POSTMARK_SERVER_TOKEN=your_postmark_server_token
# POSTMARK_ACCOUNT_TOKEN=your_postmark_account_token

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Storage provider
STORAGE_PROVIDER=local
# Options: local, s3, r2

# Local storage settings (for STORAGE_PROVIDER=local)
STORAGE_PATH=storage/upload
STORAGE_BASE_URL=http://localhost:8100/storage/upload

# Local storage settings (for STORAGE_PROVIDER=local)
STORAGE_PATH=storage/upload
STORAGE_BASE_URL=http://localhost:8100/storage/upload

# File restrictions
STORAGE_MAX_SIZE=10485760
# Size in bytes (10485760 = 10MB)

STORAGE_ALLOWED_EXT=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt,.zip
# Comma-separated list of allowed file extensions

# Cloud storage settings (for STORAGE_PROVIDER=s3 or r2)
# STORAGE_API_KEY=your_storage_api_key
# STORAGE_API_SECRET=your_storage_api_secret
# STORAGE_ACCOUNT_ID=your_account_id

# Cloud storage settings (for STORAGE_PROVIDER=s3 or r2)
# STORAGE_API_KEY=your_storage_api_key
# STORAGE_API_SECRET=your_storage_api_secret
# STORAGE_ACCOUNT_ID=your_account_id
# STORAGE_ENDPOINT=https://your-endpoint.com
# STORAGE_REGION=auto
# STORAGE_BUCKET=your-bucket-name
# STORAGE_PUBLIC_URL=https://your-cdn.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=info
# Options: debug, info, warn, error

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# For production deployments, consider these settings:
#
# ENV=production
# SWAGGER_ENABLED=false
# LOG_LEVEL=warn
# DB_DRIVER=postgres
# STORAGE_PROVIDER=s3
# JWT_SECRET=your_super_secure_production_secret
# API_KEY=your_secure_production_api_key